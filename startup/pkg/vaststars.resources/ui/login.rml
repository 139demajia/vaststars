<rml>
    <head>
        <style>
            body {
                font: 100% "微软雅黑";
            }
            .login-panel {
                width: 100%;
                height: 100%;
                background-size: cover;
                background-image: "textures/login/login.texture";
            }
            .main-panel {
                position: absolute;  
                width: 20%; 
                height:65%; 
                flex-direction: column; 
                justify-content: flex-end;
                align-items: center;
                right:5vmin;
                top:20vmin;
            }
            .verison-block {
                position: absolute;
                width: 20%;
                height:5%;
                top:0;
                left:0;
                flex-direction: row;
                justify-content: flex-start;
                align-items: center;
            }
            .info-block {
                position: absolute;
                width: 3%;
                height:1%;
                left:-16vmin;
                bottom:-38vmin;
                flex-direction: row;
                justify-content: flex-start;
                align-items: center;
                font-size: 2.5vmin;
                text-align: center;
                color: rgb(145, 141, 141);
            }
            @keyframes floating {
                from {
                    transform: translateY(-1.56vmin);
                }
                to {
                    transform: translateY(-0.56vmin);
                }
            }
            .title-block {
                font-size: 20vmin;
                color: rgb(255, 255, 255);
                -webkit-text-stroke: 0.3vmin #a52525;
                animation:1s linear 0s infinite alternate floating;
                transform: translateY(-1.06vmin);
            }
            .version-text {
                font-size: 2.8vmin;
                text-align: left;
                align-items: flex-start;
            }
            .button-text1 {
                padding-bottom: 0.15em;
                font-size: 3.73vmin;
                text-align: center;
                align-items: center;
            }
            .button-style {
                margin-bottom: 1vmin;
                flex-direction: row;
                align-items: center;
                justify-content: center;
                width: 35.00vmin;
                height:12.00vmin;
                background-color: rgb(250, 205, 9);
                border: 0.27vmin rgb(89, 73, 39);
                background-size: cover;
            }
        </style>
        <style path = "common/building_style.rcss"/>
        <script type="text/x-lua" >
            local ui_sys = require "ui_system"
            local start = ui_sys.createDataMode("start", {
            })
            function start.clickButton(event, ...)
                ui_sys.pub {...}
            end
        </script>
    </head>
    <body style = "background-color: black;">
        <div class="item-container-region"  data-model="start">
            <div class="login-panel" style = "flex-direction: column; height: 100%;">
                <!-- 标题栏 -->
                <div class = "info-block">IN DEVELOPMENT</div>
                <div class = "verison-block">
                    <div class = "version-text" style="-webkit-text-stroke:0.2vmin #000; font-size: 3vmin;">version: 1.0.0</div>
                </div>
                <div style = "position: absolute; width: 100%; height: 100%; justify-content: center; align-items: center;">
                    <div class = "title-block">浩瀚星辰</div>
                </div>
                <div class = "main-panel">
                    <button class = "button-style" style="background-color:rgb(169, 187, 6);" data-event-click = "clickButton('continue')">
                        <div class="middle-bg" style='background-image: "textures/road/traffic.texture";width:8vmin; height:8vmin;'/>
                        <div class = "button-text1" style="font-size: 5.73vmin;">继续游戏</div>
                    </button>
                    <button class = "button-style" style="background-color:rgb(203, 118, 24);" data-event-click = "clickButton('start_mode', 'adventure')">
                        <div class="middle-bg" style='background-image: "textures/science/book.texture";'/>
                        <div class = "button-text1" style="font-size: 5.73vmin;">冒险模式</div>
                    </button>
                    <button class = "button-style" style="background-color:rgb(0, 160, 235);" data-event-click = "clickButton('start_mode', 'free')">
                        <div class="middle-bg" style='background-image: "textures/construct/work.texture";'/>
                        <div class = "button-text1" style="font-size: 5.73vmin;">自由模式</div>
                    </button> 
                    <button class = "button-style" style="background-color: rgb(195, 0, 255)" data-event-click = "clickButton('load_resources')">
                        <div class="middle-bg" style='background-image: "textures/road_net/big_bag.texture"; width:6.7vmin; height:6.7vmin;'/>
                        <div class = "button-text1" style="font-size: 5.73vmin;">加载资源</div>
                    </button> 
                    <button class = "button-style" style="background-color: rgb(52, 207, 115)" data-event-click = "clickButton('load_archive')">
                        <div class="middle-bg" style='background-image: "textures/road/write.texture"; width:5.5vmin; height:5.5vmin;'/>
                        <div class = "button-text1" style="font-size: 5.73vmin;">读取进度</div>
                    </button>
                </div>
            </div>
        </div>
    </body>
</rml>