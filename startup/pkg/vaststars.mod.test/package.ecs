import "@ant.general"
import "@ant.render"
import "@ant.sky"
import "@ant.camera"
import "@ant.asset"
import "@ant.animation"
import "@ant.efk"
import "@ant.terrain"
import "@mod.terrain"
import "@mod.printer"
import "@mod.stonemountain"
system "init_system"
    .implement "init_system.lua"
    .require_system "ant.camera|default_camera_controller"
    .require_system "mod.terrain|terrain_system"
    .require_system "ant.render|indirect_system"
    .require_policy "ant.render|light"
    .require_policy "ant.sky|skybox"
    .require_policy "ant.general|name"
    .require_policy "ant.scene|scene_object"
    .require_policy "ant.render|render"
    .require_policy "ant.render|render_queue"
    .require_policy "ant.render|skinrender"
    .require_policy "ant.animation|animation"   --TODO: need remove animation dependent
    .require_policy "ant.efk|efk"
    .require_policy "ant.render|csm_queue"
    .require_policy "mod.terrain|shape_terrain"
    .require_policy "mod.printer|printer"
    .require_policy "mod.stonemountain|stone_mountain"
    .require_interface "mod.terrain|iterrain"
    .require_interface "mod.stonemountain|istonemountain"
    .method "init"
    .method "init_world"
    .method "data_changed"
    .method "camera_usage"

pipeline "init"
    .stage "init"
    .stage "post_init"

pipeline "exit"
    .stage "exit"

pipeline "update"
    .stage "timer"
    .stage "start_frame"
    .stage "data_changed"
    .stage  "widget"
    .pipeline "sky"
    .pipeline "animation"
    .pipeline "scene"
    .pipeline "camera"
    .pipeline "render"
    .stage "end_frame"
    .stage "final"
