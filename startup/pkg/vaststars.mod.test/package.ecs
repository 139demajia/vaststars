import "@ant.render"
import "@ant.sky"
import "@ant.camera"
import "@ant.asset"
import "@ant.animation"
import "@ant.efk"
import "@ant.terrain"
import "@ant.landform"
import "@mod.printer"
import "@mod.billboard"
import "@ant.objcontroller"
system "init_system"
    .implement "init_system.lua"
    .require_system "ant.camera|default_camera_controller"
    .require_system "ant.landform|terrain_system"
    .require_system "ant.landform|translucent_plane_system"
    .require_system "mod.billboard|billboard_system"
    .require_system "ant.landform|road_system"
    .require_system "ant.render|draw_indirect_system"
    .require_system "ant.objcontroller|pickup_system"
    .require_policy "ant.render|indirect"
    .require_policy "ant.render|light"
    .require_policy "ant.scene|scene_object"
    .require_policy "ant.render|render"
    .require_policy "ant.render|render_queue"
    .require_policy "ant.render|skinrender"
    .require_policy "ant.animation|animation"   --TODO: need remove animation dependent
    .require_policy "ant.render|csm_queue"
    .require_policy "ant.landform|shape_terrain"
    .require_policy "mod.printer|printer"
    .require_policy "ant.landform|stonemountain"
    .require_policy "ant.landform|road"
    .require_policy "ant.render|draw_indirect"

pipeline "init"
    .stage "init"
    .stage "post_init"

pipeline "exit"
    .stage "exit"

pipeline "update"
    .stage "timer"
    .stage "start_frame"
    .stage "data_changed"
    .stage  "widget"
    .pipeline "sky"
    .pipeline "animation"
    .pipeline "scene"
    .pipeline "camera"
    .pipeline "render"
    .stage "end_frame"
    .stage "final"
