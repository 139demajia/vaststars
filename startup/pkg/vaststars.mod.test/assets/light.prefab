---
policy:
    ant.sky|skybox
    ant.render|simplerender
data:
    visible_state: main_view
    scene: {}
    ibl:
        intensity: 65000
        irradiance:
            size: 32
        prefilter:
            size: 128
        LUT:
            size: 256
    material: $path ./materials/skybox.material
    render_layer: "background"
    simplemesh: false
    skybox:
        facesize: 512
---
policy:
  ant.render|light
data:
  scene:
    r: {1.8, 0, 0}
    t: {0, 10, 0, 1}
  visible: true
  light:
    color: {1, 1, 1, 1}
    intensity: 250000
    intensity_unit: lux
    type: directional
  make_shadow: true