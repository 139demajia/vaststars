<rml>
    <head>
        <style>
            div {
                font: 120% "宋体";
            }
            button {
                width: 120px;
                height: 60px;
                margin: 10px;
                text-align: center;
                text-decoration: none;
                border-radius: 8px;
                border: 2px white;
                
                transition: transform 2s elastic-out;
                color: #ffffff;
                background-color: rgba(197,90,17,255);
                transform: scale(1.0);
            }
            button:hover {
                transform: scale(1.2);
            }
            .panel {
                background-color: rgba(255, 255, 255, 100);
                border: 2px green;
                border-radius: 5px;
                width: 96%;
                height: 96%;
                margin: 2%;
            }
            .header {
                height: 60px;
                flex-direction: row;
                justify-content: space-between;
            }
            .progress-background {
                width: 350px;
                height: 40px;
                background-color: rgba(255,255,255,255);
            }
            .progress-fill {
                width: 350px;
                height: 40px;
                background-color: rgba(112,48,160,255);
            }
            .small-box {
                width:30px;
                height:30px;
                background-size:cover;
            }
            .box {
                width: 40px;
                height: 40px;
                background-size: cover;
            }
            .row {
                flex-direction: row;
            }
            .column {
                flex-direction: column;
            }
            .right-button-display {
                flex-direction: row;
                align-items:center;
                justify-content: flex-end;
                height:60;
                width:100px;
            }
        </style>
        <script type="text/x-lua" >
            local start = window.createModel "start" {
                show_work = false,
                work_id = 1,
                road_list = {{id=1}}
            }
            function start.clickWork(self, workid)
                if not workid then
                    start.show_work = not start.show_work
                    start.work_id = 1
                else
                    start.work_id = workid
                end
                console.log("workid", workid)
            end
            function start.clickVehicle(self, carid)
 
            end
            function start.addRoad()
                local rl = start.road_list
                rl[#rl + 1] = {id=#rl + 1}
                console.log("addRoad", #rl)
            end
            window.addEventListener('message', function(event)
                event.source.postMessage(event.data)
            end)
            window.addEventListener('mousemove', function(event)
                if event.button then
                    console.log("darg", event.x, event.y)
                end
            end)
        </script>
    </head>
    <body>
