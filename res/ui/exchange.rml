                            <div style="align-items:flex-end;">
                                <button class="row" style="align-items: center; justify-content: flex-start; width:120px; background-color: rgba(112, 48, 160, 255);">
                                    <div class="box" style='background-image:"exchange/yellow_box.png";'/>
                                    <div style='opacity: 1.0; background-image:"exchange/right_arrow.png"; width:60px; height:40px; background-size:cover;'/>
                                </button>
                            </div>
                            <div class="box" style='background-image:"construct/hand.png";'/>
