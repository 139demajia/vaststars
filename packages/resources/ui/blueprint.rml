        <script type="text/x-lua" >
            local ui_sys = require "ui_system"
            local start = ui_sys.createDataMode("start", {
                show_finish = false,
                current_icon = "none",
                current_desc = "none",
                current_running = false,
                current_button_str = "开始",
                return_title = " ",
                current_tech = {},
                techitems = {},
            })
            start.selected_tech = nil
            start.selected_recipe = nil

            local function clickTech(index)
                ui_sys.pub{"click_tech", index}
            end
            local function clickRecipe(index)
                ui_sys.pub{"click_recipe", index}
            end
            local function tech_item_renderer(index)
                local item_data = start.techitems[index]
                local item = document.createElement "div"
                local ingredient_items = ""
                if not item_data.task then
                    local ingredient_count = 0
                    for _, ingredient in ipairs(item_data.ingredients) do
                        if ingredient_count == 0 then
                            ingredient_count = ingredient.count
                        end
                        ingredient_items = ingredient_items .. ([[<div class="property-icon" style='background-image:"%s";'/>]]):format(ingredient.icon)
                    end
                    if ingredient_count > 0 then
                        ingredient_items = [[<div class="research-req">]] .. ingredient_items .. ([[<div style="font-size: 3.5vmin; text-align: center;">X %d</div></div>]]):format(ingredient_count * item_data.count)
                    end
                end
                local sign = item_data.sign_icon and ([[<div class="icon-sign" style='background-image:"%s";'/>]]):format(item_data.sign_icon) or ""
                local statestr = item_data.running and [[<div class="icon-researching">研究中...</div>]] or ""
                item.outerHTML = ([[
                <div class="progress-background-new" style="position:absolute; left:0; width: %d%%;"/>
                <div class="item-bg" style='background-image:"%s";'/>
                <div class="item-title-new">%s</div>]]):format(item_data.progress, item_data.icon, item_data.name) .. ingredient_items .. statestr .. sign

                item.className = "item-research"
                local select_style_border = "3px green"
                item.addEventListener('click', function(event)
                    if start.selected_tech then
                        start.selected_tech.style.border = '0px green'
                    end
                    item.style.border = select_style_border
                    clickTech(index)
                    start.selected_tech = item
                end)
                return item
            end
            local listclass = require "list"
            window.customElements.define("list", function(e)
                start.list = listclass.create(document, e, 0, tech_item_renderer)
            end)

            local function detail_item_renderer(index)
                local item = document.createElement "div"
                local detail = start.current_tech.detail[index]
                local htmlstr = ([[<div class="item-bg" style='background-image:"%s";'/>]]):format(detail.icon)
                if detail.name then
                    htmlstr = htmlstr .. ([[<div class="item-title-new">解锁配方："%s"</div>]]):format(detail.name)
                    item.style.backgroundColor = 'rgb(114,87,4)'
                elseif detail.desc then
                    htmlstr = htmlstr .. ([[<div class="item-title-new">%s</div>]]):format(detail.desc)
                    item.style.backgroundColor = 'rgb(112,48,160)'
                end
                item.outerHTML = htmlstr
                item.className = "item-research"
                item.style.width = '90%'
                local select_style_border = "2px green"
                item.addEventListener('click', function(event)
                    if start.selected_recipe then
                        start.selected_recipe.style.border = '0px green'
                        start.detaillist:show_detail(start.selected_recipe, false)
                    end
                    item.style.border = select_style_border
                    start.selected_recipe = item
                    if detail.name then
                        start.detaillist:show_detail(index, true)
                    end
                    clickRecipe(index)
                end)
                return item
            end
            local function pop_item_renderer(index)
                local item = document.createElement "div"
                local detail = start.current_tech.detail[index]
                local inoutstr = ""
                for _, idata in ipairs(detail.input) do
                    inoutstr = inoutstr .. ([[
                    <div class="small-item-new" style='background-image: "%s";'>
                        <div class="item-count">%d</div>
                        <div class="small-name">%s</div>
                    </div>
                    ]]):format(idata.icon, idata.count, idata.name)
                end
                inoutstr = inoutstr .. ([[<div class="small-arrow"><div class="recipe-time">%s</div></div>]]):format(detail.time)
                for _, outdata in ipairs(detail.output) do
                    inoutstr = inoutstr .. ([[
                    <div class="small-item-new" style='background-image: "%s";'>
                        <div class="item-count">%d</div>
                        <div class="small-name">%s</div>
                    </div>
                    ]]):format(outdata.icon, outdata.count, outdata.name)
                end
                local htmlstr = ([[
                <div class="recipe-info-block">
                    <div class="recipe-info-desc-block">
                        <div class="recipe-info-desc-title">配方信息</div>
                        <div class="recipe-info-desc">%s</div>
                    </div>
                    <div class="recipe-item-info-block">
                        %s
                    </div>
                </div>
                ]]):format(detail.desc, inoutstr)
                item.outerHTML = htmlstr
                return item
            end
            window.customElements.define("detaillist", function(e)
                start.detaillist = listclass.create(document, e, 0, detail_item_renderer, pop_item_renderer)
            end)
            ui_sys.mapping(start, {
                {
                    "techitems",
                    function()
                        start.selected_tech = nil
                        start.list:on_dirty_all(#start.techitems)
                    end
                },
                {
                    "current_tech",
                    function()
                        start.selected_tech = nil
                        start.detaillist:on_dirty_all(#start.current_tech.detail)
                    end
                },
                {
                    "current_progress",
                    function()
                        start.selected_tech = nil
                        start.list:on_dirty(start.current_tech.index)
                    end
                },            
            })

            function start.showFinish(event)
                start.show_finish = true
                start.return_title = "已完成科技"
                ui_sys.pub {"show_list", "finish"}
            end
            function start.clickReturn(event)
                if start.show_finish then
                    start.show_finish = false
                    start.return_title = "科研中心"
                    ui_sys.pub {"show_list", "todo"}
                else
                    ui_sys.pub {"close_techui"}
                    ui_sys.close()
                end
            end
            function start.startSwitch(event)
                ui_sys.pub {"switch"}
            end
        </script>
    </head>
