            local listclass = require "list"
            local pageclass = require "page"
            -- window size : 1336 750
            local list_proxy = listclass.create(1, {667, 750}, #start.item_list, {750, 50})
            local page_proxy = pageclass.create({667, 720}, start)
            function start.pagemousedown(event)
                console.log("pagemousedown")
                page_proxy:on_mousedown(event)
            end
            
            function start.pagedrag(event)
                --console.log("pagedrag")
                page_proxy:on_drag(event)
            end

            function start.pagemouseup(event)
                console.log("pagemouseup")
                page_proxy:on_mouseup(event)
                start.current_page = page_proxy:get_current_page() - 1
            end

            function start.page_item_click(event, id)
                console.log("page_item_click", id)
                start.selected_id = id
            end

            function start.listmousedown(event)
                list_proxy:on_mousedown(event)
            end

            function start.listdrag(event)
                list_proxy:on_drag(event)
            end

            function start.listmouseup(event)
                list_proxy:on_mouseup(event)
            end

            window.addEventListener('message', function(event)
                console.log("event.source.postMessage")
                event.source.postMessage(event.data)
            end)
            window.addEventListener('mousemove', function(event)
            end)
