<rml>
    <head>
        <style>
            div {
                font: 120% "微软雅黑";
            }
            button {
                width: 25%;
                height: 100%;
                margin: 0;
                text-align: center;
                text-decoration: none;
                border-radius: 8px;
                border: 2px rgb(89, 73, 39);
                opacity: 1;
                transition: transform 2s elastic-out;
                background-color: rgb(197,224,180);
            }
            button:hover {
                transform: scale(1.1);
            }
            .box {
                margin: 0 0.01em;
                width: 80px;
                height: 80px;
                border: 2px rgb(89, 73, 39);
                background-color: rgb(0, 176, 80);
                background-size:cover;
            }
            .icon {
                width: 60px;
                height: 60px;
                background-size:cover; 
            }
            .row {
                flex-direction: row;
                justify-content: flex-start;
                align-items: center;
            }
            .column {
                flex-direction: column;
                justify-content: flex-start;
                align-items: center;
            }
            .panel {
                background-color: rgb(44, 32, 18);
                border: 1px rgb(89, 73, 39);
                border-radius: 5px;
                width: 48%;
                height: 100%;
            }

            /*标题栏和返回按键  */
            .header {
                height: 60px;
                flex-direction: row;
                justify-content: space-between;
            }
            #item-name-block {
                width: 100%; 
                align-items: center; 
                justify-content: flex-start;
            }
            .back-button {
                background-color: rgba(255, 255, 255, 0); 
                border: 0px; 
                background-image:"common/return.png"; 
                width:70px; 
                height:70px; 
                background-size:cover;
            }
            .menu-title {
                -webkit-text-stroke: 1.5px rgb(0, 112, 192); 
                font-size:200%;
                justify-content: flex-start;
                width: 70%;
            }

            /*左侧背包栏*/
            workbutton {
                font-size: 20px;
                color: rgb(221, 235, 26);
                flex-direction: column;
                justify-content: flex-start;
                align-items: center;
                border-radius: 10px;
                border: 2px rgb(89, 73, 39);
                background-color: rgb(246, 142, 14);
                height: 65px;
                width: 130px;
                transform: scale(1.0);
                transition: color background-color transform 2s elastic-out;
            }
            workbutton:active {
                transform: scale(1.0);
            }

            .item-container-region {
                margin: auto;
                height: 100%; 
                flex-direction: row; 
                justify-content: space-evenly;
            }
            /*单个物品按钮*/
            .item-container {
                margin:0.2rem 1em;
                flex-direction: column;
                align-items: flex-start;
                font-size: 50%;
                height: 70%;
            }
            .item {
                flex-direction: column;
                align-items:flex-start;
                justify-content:space-evenly;
                background-color: rgb(250, 205, 9);
                border: 2px rgb(89, 73, 39);
                background-size:cover;
                width:90px;
                height:90px;
                margin:2px auto;
                font-size: 18px;
                background-image: "construct/insert1.png";
            }
            .item-title {
                text-align: center;
                top:14%;
                background-color: rgb(246, 237, 189);
                border-radius: 5px;
                color:rgb(73, 60, 32);
                -webkit-text-stroke: 0.5px rgb(73, 60, 32);
                width: 85px;
                margin:0px;
            }
            .item-count {
                text-align:left;
                margin:0px;
                top:-18px;
                left:5px;
                -webkit-text-stroke: 0.5px rgb(39, 32, 17);
            }
            /*分割线*/
            .draw-line {
                margin-bottom:0.1em;
                width: 100%;
                border-bottom: 1.5px rgb(89, 73, 39);
            }
            /*tab区域*/
            .tab-container {
                margin:0.1rem auto;
                flex-direction: row;
                justify-content: space-evenly;
                align-items:flex-start;
                width:100%;
                height: 10%;
            }
            .workbutton-bg {
                margin: auto auto;
                top:12px;
                width:50px;
                height: 50px; 
                background-size: cover;
            }
            .catalog-desc {
                -webkit-text-stroke: 1.5px rgb(39, 32, 17); 
                position:relative;
                top:-38px; 
                left:-42px;
                color: rgb(221, 235, 26)
            }
            /*右侧建筑信息栏*/
            .build-info-block {
                width: 100%;
                height: 30%;
                flex-direction: row;
                align-items: center;
                justify-content: flex-start;
            }
            .build-picture-block {
                margin-left: 0.5em;
                flex-direction: column;
                align-items: center;
                width: 100%;
                height:70%;
            }
            .build-power-info-block {
                margin-left: 0.5em;
                flex-direction: row;
                align-items: center;
                width: 100%;
                height:30%;
            }
            .bulid-status-info {
                margin-top: 1.5em;
                font-size:20px;
                color: aquamarine;
            }
            .build-picture {
                margin: 0.1em;
                width: 80px;
                height: 80px;
                background-color: rgb(191,144,0);
                background-size: cover;
                background-image: "construct/assembler.png";
            }
            .progress-pic {
                width:30px;
                height:30px;
                background-size:cover;
                background-image:"character/flash.png";
                margin:0 0em 1em 0.55em;
            }
            .progress-bar-block {
                margin:0 0 1em 0;
                width: 42%;
                height:20%;
                justify-content: flex-start;
                border: 1px #fff;
            }
            .progress-background {
                justify-content: flex-start;
                width: 60%;
                height: 100%;
                background-color: rgb(87, 238, 0);
            }
            .info-block {
                width:40%;
                height:60%;
                flex-direction: column;
                justify-content: flex-start;
            }
            .drone-block {
                width: 100%;
                height: 60%;
                flex-direction: column;
                justify-content: flex-start;
                border: 1px rgb(89, 73, 39);
            }
            .drone-room-block {
                margin-top: 1em;
                width: 100%;
                height: 80%;
                flex-direction: column;
                justify-content: flex-start;
                align-items: center;
            }
            .drone-title-block {
                width:20%;
                height:8%;
                flex-direction: row;
                justify-content: flex-start;
                background-color: rgb(255,217,102);
                border-radius: 5px;
                border:1px rgb(89, 73, 39);
                align-items: center;
            }
            .drone-pic {
                margin-left: 0.2em;
                width:25px;
                height:25px;
                background-size:cover;
                background-image: "construct/drone1.png";
            }
            .drone-title {
                margin-bottom: 0.2em;
                font-size:26px;
                color:rgb(255,255,255);
                -webkit-text-stroke: 1px rgb(89, 73, 39);
                text-align: left;
            }
            .drone-room {
                width:65%;
                height:25%;
                flex-direction: row;
                justify-content: space-evenly;
                align-items: center;
            }
            .upgrade-block {
                width: 100%;
                height:10%;
                flex-direction: row;
                justify-content: flex-end;
            }
            .text-production-cabin {
                border:1px rgb(0, 119, 255);
                width: 150px; 
                height: 70px;
                font-size: 30px; 
                text-align: center;
                background-color: rgb(51,205,113);
                color: rgb(255, 255, 255);
            }
            .property-icon {
                width:30px;
                height:30px;
                background-size:cover;
            }
            .property-text {
                margin-left: 10px;
                font-size:20px;
                color: rgba(0,176,240,255);
