<rml>
    <head>
        <style>
            .guide-speech-block {
                margin-left: 10vmin;
                flex-direction: row;
                width: 85%;
                height:100%;
                font-size: 5vmin;
                text-align: left;
                word-break: break-all;
                justify-content: center;
                align-items: center;
            }
            .guide-avatar-block {
                width: 29.4vmin;
                height: 43.1vmin;
                position: absolute;
                background-size: cover;
                left:-18vmin;
                bottom: -7vmin;
            }
            .guide-info-block {
                width: 8vmin;
                height:3.5vmin;
                position: absolute;
                right:0.5vmin;
                /* bottom: 0.5vmin; */
                background-image: "textures/common/pipe_arrow.texture";
                transform: rotate(-180deg);
                background-size: cover;
                animation:0.3s linear 0s infinite alternate updown;
            }
            @keyframes updown {
                0% {
                    bottom: 0.5vmin;
                }
                100% {
                    bottom: 1.2vmin;
                }
            }
        </style>
        <style path = "common/building_style.rcss"/>
        <script type="text/x-lua" >
            local ui_sys = require "ui_system"
            local start = ui_sys.createDataMode("start", {
                FluidName = ' ',
                FluidCount = 0,
                NewFluidName = ' ',
            }

            function start.clickConfirm(event)
                ui_sys.close()
            end

            function start.clickCancel(event)
                ui_sys.close()
            end
        </script>
    </head>
    <body style = "pointer-events: none;">
        <div style = "pointer-events: none; align-items: center;" class="item-container-region"  data-model="start">
            <div class="panel" style="width:40%; height:24%;  align-items: center; justify-content: flex-start;">
                <div class = "guide-speech-block">一二三四五六七八九十一二三四五六七八九十一二三四五六七八九十一二三四五六七八九十一二三四五六七八九十</div>
                <div class="guide-avatar-block" style='background-image:"textures/guide/guide-1.texture";'/>
                <div class="guide-info-block"/>
            </div>
        </div>
    </body>
</rml>