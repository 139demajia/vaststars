                    <button style = "justify-content:center; align-items: center;">
                        <div class = "change-recipe"/>
                    </button>
                </div>
                <div class="row" style="border: 0.13vmin rgb(89, 73, 39); width: 100%; height: 50%;">
                    <div class="row" style="justify-content: center;">
                        <div class="column" style="justify-content: space-between; width: 35%;">
                            <div class="row">
