<rml>
    <head>
        <style>
            div {
                font: 120% "微软雅黑";
            }
            button {
                width: 80px;
                height: 80px;
                margin: 10px;
                text-align: center;
                text-decoration: none;
                border-radius: 8px;
                opacity: 1;
                transition: transform 2s elastic-out;
                transform: scale(1.0);
            }
            button:hover {
                transform: scale(1.1);
            }
            .button-bg {
                 width:50px;
                 height:50px;
                 margin-bottom:5px;
                 align-self:center;
                 background-size:cover;
            }
            .button-text {
                background-color: rgb(128,156,126);
                font-size:18px;
                text-align:center;
                border-radius: 4px;
            }
            .item-container-region {
                margin: auto;
                height: 90%; 
                flex-direction: row; 
                justify-content: space-evenly;
                align-items: center;
            }
            .panel {
                background-color: rgb(44, 32, 18);
                border: 1px rgb(89, 73, 39);
                border-radius: 5px;
                width: 48%;
                height: 40%;
                justify-content: space-evenly;
            }
             /*标题栏和返回按键  */
             .header {
                height: 60px;
                flex-direction: row;
                justify-content: space-between;
            }
            #item-name-block {
                width: 100%; 
                align-items: center; 
                justify-content: flex-start;
            }
            .back-button {
                border: 0px; 
                background-image:"common/return.png"; 
                width:70px; 
                height:70px; 
                background-size:cover;
            }
            .menu-title {
                -webkit-text-stroke: 1.5px rgb(0, 112, 192); 
                font-size:200%;
                justify-content: flex-start;
                width: 70%;
            }

            /*左侧背包栏*/

            .item-container-region {
                margin: auto;
                height: 100%; 
                flex-direction: row; 
                justify-content: space-evenly;
            }
            /*单个物品按钮*/
            .item-container {
                margin:0.2rem 1em;
                flex-direction: column;
                align-items: flex-start;
                font-size: 50%;
                height: 75%;
            }
            .item {
                flex-direction: column;
                align-items:flex-start;
                justify-content:space-evenly;
                background-color: rgb(250, 205, 9);
                border: 2px rgb(89, 73, 39);
                background-size:cover;
                width:90px;
                height:90px;
                margin:2px auto;
                font-size: 18px;
                background-image: "construct/insert1.png";
            }
            .item-name-background {
                text-align: center;
                top:14%;
                background-color: rgb(246, 237, 189);
                border-radius: 5px;
                color:rgb(73, 60, 32);
                -webkit-text-stroke: 0.5px rgb(73, 60, 32);
                width: 85px;
                margin:0px;
            }
            .item-count {
                text-align:left;
                margin:0px;
                top:-18px;
                left:5px;
                -webkit-text-stroke: 0.5px rgb(39, 32, 17);
            }

            .item-add {
                background-color:rgb(143, 143, 143);
                border: 2px rgb(89, 73, 39);
                background-size:cover;
                width:90px;
                height:90px;
                margin:2px auto;
                background-image: "science/add.png";
            }
            /*分割线*/
            .draw-line {
                margin-bottom:0.1em;
                width: 100%;
                border-bottom: 1.5px rgb(89, 73, 39);
            }
            /*tab区域*/
            .tab-container {
                margin:0.1rem auto;
                flex-direction: row;
                justify-content: space-evenly;
                align-items:flex-start;
                width:100%;
                height: 10%;
            }
            .workbutton-bg {
                margin: auto auto;
                top:12px;
                width:50px;
                height: 50px; 
                background-size: cover;
            }
            .catalog-desc {
                -webkit-text-stroke: 1.5px rgb(39, 32, 17); 
                position:relative;
                top:-38px; 
                left:-42px;
                color: rgb(221, 235, 26)
            }
            .property-display {
                flex-direction: row;
                align-items:center;
            }
            .property-icon {
                width:30px;
                height:30px;
                background-size:cover;
            }
            .property-text {
                margin-left: 10px;
                font-size:20px;
                color: rgb(0,176,240);
            }
            .row {
                flex-direction: row;
                justify-content: flex-start;
                align-items: center;
            }
            .column {
                flex-direction: column;
                align-items:center;
            }
            .progress-bar-block {
                margin:0 0 0.05em 0;
                width: 42%;
                height:20%;
                justify-content: flex-start;
                border: 1px rgb(89, 73, 39);
            }
            .progress-background {
                justify-content: flex-start;
                width: 60%;
                height: 100%;
                background-color: rgb(0,176,240);;
            }
            .button-operater-items {
                text-align: center;
                background-size: cover;
                background-color: aqua;
                font-size: 20px;
                -webkit-text-stroke: 0.5px rgb(73, 60, 32);
            }
            .button-operate-item {
                flex-direction: column;
                align-items:center;
                justify-content:space-evenly;
                background-color: rgb(92, 184, 92);
                border: 2px rgb(39, 89, 64);
                background-size:cover;
                width:150px;
                height:90px;
                margin:1.5em 2em;
                font-size: 18px;
            }
            .button-operate-text {
                color: rgb(213,236,213);
                font-size: 26px;
                text-align: center;
                align-self: center;
            }
            .item-page-block {
                transition: left 0.5s linear-out; 
                width:100%; 
                height:100%;
            }
            .button-area {
                position: absolute; 
                top: -60px; 
                right: -70px;
            }
            .button-close {
                width: 90px;
                height: 90px;
                background-image: "common/delete.png";
                background-size: cover;
            }
            .item-icon-area {
                position: absolute; 
                top: -50px; 
                left: -50px;
            }
            .item-icon {
                width: 90px;
                height: 90px;
                background-image: "science/hand.png";
                background-size: cover;
            }
            .item-title-block {
                flex-direction: column; 
                width: 100%; 
                height: 20%;
            }
            .item-title {
                margin:0.1em 1.5em;
                width: 90%;
                height: 100%;
                justify-content: flex-start;
                text-align: left;
                font-size: 30px;
                -webkit-text-stroke: 0.5px rgb(73, 60, 32);
            }
            .item-number-block {
                flex-direction: row;
                width: 95%;
                height:30%;
                justify-content: space-evenly;
            }
            .item-number-left {
                width: 50%;
                height: 90%;
                font-size: 28px;
                -webkit-text-stroke: 1px rgb(89, 73, 39);
                text-align: left;
                color: rgb(255,249,214);
            }
            .item-number-right {
                width: 50%;
                height: 90%;
                font-size: 28px;
                -webkit-text-stroke: 1px rgb(89, 73, 39);
                text-align: right;
                color: rgb(255,249,214);
            }
            .item-progress-bar-block {
                width: 100%;
                height:40%;
                flex-direction: row;
                justify-content: center;
                align-items: center;
            }
            .item-icon-left {
                width: 80px;
                height: 80px;
                background-size: cover;
                background-image: "exchange/blue_character.png";
            }
            .item-progress-bar {
                width:95%;
                height:25%;
                background-color: rgb(196, 0, 245);
                border:1px rgb(255,249,214);;
            }
            .item-icon-right {
                margin-top: 0.3em;
                width: 80px;
                height: 80px;
                background-size: cover;
                background-image: "exchange/purple_bag.png";
            }
            .button-exchange-block {
                flex-direction: row;
                width: 100%;
                height:30%;
                align-items: center;
                justify-content: space-evenly;
            }
            .button-exchange {
                flex-direction: row;
                justify-content: center;
                align-items: center;
                width:180px;
                height:70px;
                background-color: rgb(52, 207, 115);
            }
            .button-exchange-text {
                font-size: 28px;
                text-align: center;
                color: rgb(255,249,214);
            }
            .button-exchange-arrow {
                width: 61px;
                height: 47px;
                background-size: cover;
                background-image: "exchange/left_arrow.png";
            }
            .button-exchange-box {
                width: 60px;
                height: 60px;
                background-size: cover;
                background-image: "exchange/yellow_box.png";
            }
        </style>
        <script type="text/x-lua" >
            console.log("before createModel")
            local start = window.createModel "start" {
                
            }
        </script>
    </head>
    <body>
        <div class="item-container-region"  data-model="start">
            <div class="panel">
                <div class = "button-area">
                    <button class="button-close"/>
                </div>
                <div class = "item-icon-area">
                    <div class="item-icon"/>
                </div>
                <div class="column" style="width: 100%; height: 100%;">
                    <div class = "item-title-block">
                        <div class = "item-title">机械臂</div>
                    </div>
                    <div class = "item-progress-bar-block">
                        <div class = "item-icon-left"/>
                        <div class ="column" style="width:65%;">
                            <div class = "item-number-block">
                                <div class = "item-number-left">1000</div>
                                <div class = "item-number-right">100</div>
                            </div>
                            <div class = "item-progress-bar">
                                <div class="progress-background"/>
                            </div>
                        </div>
                        <div class = "item-icon-right"/>
                    </div>
                    <div class="button-exchange-block">
                        <button class="button-exchange" style = "background-color: rgb(203, 118, 24);">
                            <div class = "button-exchange-arrow"/>
                            <div class = "button-exchange-text">全部</div>
                            <div class = "button-exchange-box"/>
                        </button>
                        <button class="button-exchange">
                            <div class = "button-exchange-arrow"/>
                            <div class = "button-exchange-text">1组</div>
                            <div class = "button-exchange-box"/>
                        </button>
                        <button class="button-exchange">
                            <div class = "button-exchange-arrow"/>
                            <div class = "button-exchange-text">1个</div>
                            <div class = "button-exchange-box"/>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </body>
</rml>