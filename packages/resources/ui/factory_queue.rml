                                    <div class="item-count">99</div>
                                    <div class="small-name">机器爪I</div>
                                </div> 
                                <div style="flex-direction:row; align-items:center; justify-content:center; width:85%;height:100%; background-color: rgb(114, 87, 4);border: 0.27vmin rgb(89, 73, 39);">
                                    <div class="progress-background-new" style="position:absolute; left:0; width: 0%;"/>
                                    <div class="item-title-new">0%</div>
                                </div>
